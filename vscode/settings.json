// ~/.config/VSCodium/User/settings.json
{
    "keyboard.dispatch": "keyCode",
    "workbench.startupEditor": "none",
    "editor.rulers": [79],
    "vim.leader": "<space>",

    // keybindigs
    "vim.normalModeKeyBindingsNonRecursive": [

        // movement
        {
            "before": [
                "t"
            ],
            "after": [
                "j"
            ],
        },
        {
            "before": [
                "n"
            ],
            "after": [
                "k"
            ],
        },
        {
            "before": [
                "s"
            ],
            "after": [
                "l"
            ],
        },
        {
            "before": [
                "T"
            ],
            "after": [
                "<C-f>"
            ],
        },
        {
            "before": [
                "N"
            ],
            "after": [
                "<C-b>"
            ],
        },

        // tabs
        {
            "before": [
                "H",
            ],
            "commands": [
        		  "extension.vim_ctrl+pageup"
            ],
        },
        {
            "before": [
                "S",
            ],
            "commands": [
        		  "extension.vim_ctrl+pagedown"
            ],
        },

        // search
        {
            "before": [
                "<Enter>"
            ],
            "after": [
                "n"
            ],
        },
        {
            "before": [
                "<BackSpace>"
            ],
            "after": [
                "N"
            ],
        },

        // hover
        {
            "before": [
                "<space>",
            ],
            "commands": [
		        "editor.action.showHover",
            ],
        },
    ],
    "vim.visualModeKeyBindings": [
        {
            "before": [
                "t"
            ],
            "after": [
                "j"
            ],
        },
        {
            "before": [
                "n"
            ],
            "after": [
                "k"
            ],
        },
        {
            "before": [
                "s"
            ],
            "after": [
                "l"
            ],
        },
    ],

    "workbench.editorAssociations": {
        "*.ipynb": "jupyter.notebook.ipynb"
    },
    "editor.cursorBlinking": "solid",
    "editor.cursorStyle": "block",
    "editor.wordBasedSuggestions": true,

    "editor.quickSuggestions": {
        "other": true,
        "comments": false,
        "strings": true
      },

    "workbench.iconTheme": "eq-material-theme-icons-darker",
    "color-highlight.markerType": "dot-before",
    "workbench.tree.indent": 22,
    "vim.hlsearch": true,
    "workbench.colorTheme": "GitHub Dark",
    "eslint.migration.2_x": "off",
    "[markdown]": {
        "editor.wordWrap": "on",
        "editor.quickSuggestions": {
            "comments": "off",
            "strings": "off",
            "other": "off"
        }
    },
    "cSpell.userWords": [
        "MIDDLEWARES",
        "NOQA",
        "aiohttp",
        "asyncio",
        "docutils",
        "lona",
        "overrideable",
        "pformat",
        "websockets",
        "yarl"
    ],
    "explorer.confirmDragAndDrop": false,
    "workbench.colorCustomizations": {
    },

    "window.titleBarStyle": "custom",
    "window.customMenuBarAltFocus": false,
    "terminal.integrated.inheritEnv": false,
    "terminal.external.linuxExec": "xterm",
    "terminal.integrated.persistentSessionScrollback": 0,
    "html.format.contentUnformatted": "",
    "terminal.integrated.scrollback": 0,
    "editor.fontFamily": "'SourceCodePro','monospace', monospace",
    "editor.fontLigatures": false,
    "python.terminal.activateEnvironment": false,
    "python.envFile": "",
    "scm.diffDecorationsGutterPattern": {
        "added": true
    },
    "workspaceSidebar.folder": "~/vscode-workspaces",
    "workspaceSidebar.depth": 25,
    "workspaceSidebar.showFolderHierarchy": true,
}
